@model CustomerIncBalanceTRYViewModel
@{
    ViewData["Title"] = "IncreaseBalanceTRY";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="IncreaseBalanceTRY" method="post" asp-controller="Customer">
    <input asp-for="Id" type="hidden" id="input-id" class="form-control form-control-alternative" value="@Model.Id">
    <h6 class="heading-small text-muted mb-4">Increase Tl balance</h6>
    <div class="pl-lg-4">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group focused">
                    <div class="form-group">
                        <label class="form-control-label" for="input-StoreName">Amount:</label>
                        <input asp-for="TRYAmount" type="number" step=".01" min="0" id="input-StoreName" class="form-control form-control-alternative" value="">
                        <span asp-validation-for="TRYAmount" class="text-danger"></span>
                    </div>
                </div>
            </div>
           
        </div>
     
    </div>
    <hr class="my-4">
    <!-- Address -->

   
    <button class="btn btn-info" type="submit">Submit</button>
</form>

